{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "dist",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "types": [
      "@types/node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    ".eslintrc.js",
    ".stylelintrc.js",
    ".lintstagedrc.js"
  ],
  "include": [
    "**/*.ts"
  ]
}